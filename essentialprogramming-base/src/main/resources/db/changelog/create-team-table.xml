<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="create-team-table" author="Razvan Prichici">
    <createTable tableName="team">
      <column name="id" type="bigint">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(250)" />
      <column name="groupId" type="bigint"/>
      <column name="points" type="int" />
    </createTable>
    <addAutoIncrement tableName="team" columnName="id" columnDataType="bigint"
                      startWith="1" incrementBy="1"/>

    <addForeignKeyConstraint baseTableName="team"
                             baseColumnNames="groupId"
                             constraintName="team_groupId_fk"
                             referencedTableName="group"
                             referencedColumnNames="id" onDelete="CASCADE"/>

    <insert tableName="team">
      <column name="id" valueNumeric="1"/>
      <column name="points" valueNumeric="10"/>
      <column name="groupId" valueNumeric="1"/>
      <column name="name" value="PSG"/>
    </insert>
    <insert tableName="team">
      <column name="id" valueNumeric="2"/>
      <column name="points" valueNumeric="9"/>
      <column name="groupId" valueNumeric="1"/>
      <column name="name" value="Juventus"/>
    </insert>
    <insert tableName="team">
      <column name="id" valueNumeric="3"/>
      <column name="points" valueNumeric="8"/>
      <column name="groupId" valueNumeric="2"/>
      <column name="name" value="Milan"/>
    </insert>
    <insert tableName="team">
      <column name="id" valueNumeric="4"/>
      <column name="points" valueNumeric="7"/>
      <column name="groupId" valueNumeric="2"/>
      <column name="name" value="Barcelona"/>
    </insert>

    <rollback>
      <dropForeignKeyConstraint constraintName="team_groupId_fk"
                                baseTableName="team"/>
      <dropTable tableName="team"/>
    </rollback>
  </changeSet>
</databaseChangeLog>
